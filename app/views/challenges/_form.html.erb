<%= form_for(@challenge) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :activity %>
    <%= f.text_field :activity %>
    <br>
    <%= f.label :activity_reps %>
    <%= f.text_field :activity_reps %>
    <br>
    <%= f.label :start_date %>
    <%= f.text_field :start_date %>
    <br>
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
    <br>
    <%= f.collection_select(:charity_id, Charity.all, :id, :name) %>
    <%= f.collection_select(:group_id, Group.all, :id, :name) %>
  </div>

  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
